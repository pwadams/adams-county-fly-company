<%= form_for @user do |f| %>

<%= f.label :first_name %>
<%= f.text_area :first_name %>

<%= f.label :last_name %>
<%= f.text_area :last_name %>

<%= f.label :email  %>
<%= f.text_area :email %>

<%= f.label :river %>
<%= f.text_area :river %>

<%= f.label :date %>
<%= f.date_field :date %>

<%= f.submit "Create User" %>

<% end %>
